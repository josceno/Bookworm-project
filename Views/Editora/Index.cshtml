@model IEnumerable<Editora>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
    <div class="col-6">
          <h2 class="text-primary">Editoras</h2>
    </div>     
      <div class="col-6 text-end">
        <a asp-controller="Editora" asp-action="Create" class="btn btn-primary">Add Editora</a>
      </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Nome fantasia
            </th>
            <th>
               Endereço
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                 <td width="50%">
                  @obj.Nomefantasia
                 </td>
                  <td width="50%">
                   @obj.Endereco
                  </td>
                  <td>
                      <div class="w-75 btn-group" role="group">
                            <a asp-controller="Editora" asp-action="Edit" asp-route-id="@obj.IdEditora"><i class="bi bi-pencil-square"></i>Editar</a>
                            @*@<a asp-controller="Editora" asp-action="Edit" asp-route-id="@obj.IdEditora"><i class="bi bi-pencil-square"></i>Excluir</a>*@
                      </div>
                  </td>
                  <td>
                       <div class="w-75 btn-group" role="group">
                        @*<a asp-controller="Editora" asp-action="Edit" asp-route-id="@obj.IdEditora"><i class="bi bi-pencil-square"></i>Edit</a>*@
                        <a asp-controller="Editora" asp-action="Delete" asp-route-id="@obj.IdEditora"><i class="bi bi-pencil-square"></i>Excluir</a>
                          </div>
                  </td>
            </tr>
        }
    </tbody>
</table>
