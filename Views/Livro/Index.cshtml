@model IEnumerable<Livro>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
    <div class="col-6">
          <h2 class="text-primary">Livro</h2>
    </div>     
      <div class="col-6 text-end">
        <a asp-controller="Livro" asp-action="Create" class="btn btn-primary">Add Livros</a>
      </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Livro Nome
            </th>
            <th>
                Livro Sinopse
            </th>
            <th>
                paginas
            </th>
            <th>
                cod editora
            </th>         
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model){
            <tr>
                <td width="50%">
                    @obj.NomeLivro
                </td>
                <td width="50%">
                    @obj.Sinopse
                </td>
                <td width="20%">
                    @obj.qtd_paginas
                </td>       
                <td>
                    @obj.idEditora
                </td>
                    <td>
                          <div class="w-75 btn-group" role="group">
                                <a asp-controller="Livro" asp-action="Edit" asp-route-id="@obj.id_livro"><i class="bi bi-pencil-square"></i>Editar</a>
                          </div>
                      </td>
                            <td>
                              <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Livro" asp-action="Editor" asp-route-id="@obj.idEditora"><i class="bi bi-pencil-square"></i>Editora</a>
                              </div>
                          </td>
                           <td>
                           <div class="w-75 btn-group" role="group">
                            <a asp-controller="Livro" asp-action="Delete" asp-route-id="@obj.id_livro"><i class="bi bi-pencil-square"></i>Excluir</a>
                           </div>
                      </td> 
            </tr>
        }
    </tbody>
</table>


