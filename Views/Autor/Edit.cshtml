@model Autor

<form method="post" asp-action="Edit">
    <input asp-for="Id_Autor" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
              <h2 class="text-primary">Editar Autor</h2>
              <hr/>
        </div>
        @*@<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="nameAutor">Nome do Autor</label>
            <input asp-for="nameAutor" class="form-control"/> 
            <span asp-validation-for="nameAutor" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="LocalNascimento">Local do Nascimento</label>
            <input asp-for="LocalNascimento" class="form-control"/>
            <span asp-validation-for="LocalNascimento" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Alterar</button>
        <a asp-controller="Autor" asp-action="Index" class="btn btn-secondary"> voltar</a>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }      
}

